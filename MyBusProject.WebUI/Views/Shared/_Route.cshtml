@model Route

<div class="card mb-4 mt-3 shadow">

    <div class="card-body">
        <a class="card-title" asp-controller="Route" asp-action="Details" asp-route-id="@Model.RouteId" style="text-decoration:none; font-size:24px;">@Model.StartRoute <i class="fas fa-long-arrow-alt-right"></i> @Model.EndRoute</a>
        <p class="card-text"><b style="font-size:19px;">Güzergah:</b>  @Model.StartRoute > @Model.Route1 > @Model.Route2 > @Model.Route3 > @Model.EndRoute</p><br />

        <p style=" font-size:24px; text-align:center;">
            <b>@Model.Date </b>
            - @Model.Hour
        </p>


    </div>
    <div class="card-footer text-center">
        <a asp-controller="Route" asp-action="Details" asp-route-id="@Model.RouteId" class="btn btn-primary btn-sm">İncele</a>

    </div>
</div>